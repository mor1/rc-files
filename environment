GIT_PS1_SHOWCOLORHINTS=false
PROMPT_COMMAND='__git_ps1 \
  "\[\e]0;${KERNEL} \u@\h:\w\a\]: \u@\h:\[$WHITE\]\W\[$COLOR_OFF\]" \
  "\[$COLOR_OFF\]\$; " \
  "#%s "
  '
export PROMPT_COMMAND

