alias cat="bat"
alias less="bat"
alias ls="eza -F --group-directories-first --git"
alias ps="procs"
alias xd="hexyl"

alias l="ls"
alias la="ls -A"
alias ll="ls -l"
alias lla="ls -lA"
alias lll="ls -B -lZ --time-style=long-iso"

alias bc="bc -l"
alias ctime="python -c 'import sys,time; print(time.ctime(float(sys.argv[1])))'"
alias dif="git diff --minimal --no-index" # | xargs bat --diff"
alias dift="git diff --name-only --relative -- | xargs bat --diff"
alias difw="git dfw --minimal --no-index --"
alias e="codium"
alias ho="handlr open"
alias reset="\reset -i ^C"

alias bigclock='nix-shell -p wlclock --run "wlclock --border-size 5 --corner-radius 10 --hand-width 13 --marking-width 3 --size 650 --position bottom-left"'
alias clock='nix-shell -p wlclock --run "wlclock --border-size 5 --corner-radius 10 --hand-width 8 --marking-width 3 --size 200 --position bottom-left"'
