## global

# mitigate CVE-2016-0778 and CVE-2016-0777
UseRoaming no

## local

Host mirage-xen
     User root
     Hostname localhost
     IdentityFile ~/.ssh/bitbucket-key
     Port 2233

Host hw2
     User root
     Hostname ubuntu.local
     IdentityFile ~/.ssh/hw2-dreamplug-key

## cucl

Host slogin.cl.cam.ac.uk slogin-serv.cl.cam.ac.uk sandy.cl.cam.ac.uk slogin-new.cl.cam.ac.uk
     User rmm1002
     IdentityFile ~/.ssh/cucl-key
     ForwardX11 yes

Host *.cl
     User rmm1002
     HostName %h
     IdentityFile ~/.ssh/cucl-key
     ProxyCommand ssh -W %h.cam.ac.uk:%p rmm1002@slogin.cl.cam.ac.uk
     ForwardX11 no
     ForwardAgent yes

